<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemActivity">
    <Button
            android:text="情報"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button11"/>
    <Button
            android:text="救急"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button11" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button10"/>
    <Button
            android:text="食料・飲料"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:id="@+id/button12"
            app:layout_constraintEnd_toStartOf="@+id/button10" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button14"/>
    <Button
            android:text="装備"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button13" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button15"/>
    <Button
            android:text="衛生"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button14" app:layout_constraintEnd_toStartOf="@+id/button11" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button12"/>
    <Button
            android:text="防寒"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/button15" app:layout_constraintStart_toEndOf="@+id/button11"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button13"/>
    <ScrollView
            android:layout_width="395dp"
            android:layout_height="577dp" tools:layout_editor_absoluteY="146dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/scrollView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>