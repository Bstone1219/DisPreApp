<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".IncorrectActionActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/incorrect_action"
            android:id="@+id/imageView"
            android:src="@drawable/incorrect_action"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="行ってはいけない行動"
            android:layout_width="236dp"
            android:layout_height="36dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="65dp" android:layout_marginStart="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp" android:layout_marginRight="65dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/scrollText" android:textColor="#000000" android:textStyle="bold"
            android:layout_marginBottom="32dp" android:layout_marginTop="64dp"/>
    <ScrollView
            android:layout_width="285dp"
            android:layout_height="400dp"
            android:id="@+id/scrollText"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:textStyle="bold" android:layout_marginTop="64dp">
        <TextView
                android:text="・ガス漏れを起こしている可能性があるので、地震後ガスの臭いがする場合やガス漏れの疑いがある場合は火を使わないこと。 \n
なるべく低い位置にある窓を開けるなどして、ガス抜きを試みる。\n\n
・ガス漏れの恐れがあるため、電気のスイッチにも触ってはいけない。\n
微妙な火花が漏れたがすに引火する恐れがあるため。ガス臭くても、換気扇も回してはいけない。ライターやマッチも同様に使用してはいけない。\n\n
・不急不要の電話はしないこと。\n
救急や消防など必要な電話の妨げになってしまうため、ご家族、ご友人の安否が気になるが、大きな地震の直後は生死をわける多くの緊急通報が警察や消防へ入るため、命にかかわる通報へ回線を譲ろう。
"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="#FF5722"
                android:layout_width="match_parent"
                android:id="@+id/Contents" android:layout_height="match_parent"
        />
    </ScrollView>
    <TextView
            android:text="TOPへ"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:id="@+id/toTop" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            android:autoLink="all" android:linksClickable="true"
            android:paddingTop="5dp" android:paddingBottom="0dp" android:paddingLeft="25dp"
            android:paddingRight="0dp" android:textColor="#3F51B5" android:textSize="15sp"/>
    />

</androidx.constraintlayout.widget.ConstraintLayout>